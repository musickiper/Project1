<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span>Login</h1>

    <%if(message.length>0){%>
        <div class="alert alert-danger"><%=message%></div>
    <%}%>
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Login</button>
        <br>
        <br>
        <!--<a href="/auth/facebook" class="btn btn-primary">-->
        <a class="btn btn-primary" onclick="window.alert('Sorry, My web url is blocked by facebook. I am trying to resolve this problem. It is going to work.');">
            <span class="fa fa-facebook"></span> Facebook
        </a>
    </form>
    <br>
    <p>Don't you have an account?<a href="/signup">Sign Up</a></p>
    <p><a href="/">Go to main page</a>.</p>
</div>
